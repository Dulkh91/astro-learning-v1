---
interface Props{
    items: Array<{title: string, image: string}>
}

const {items} = Astro.props
import { Image } from 'astro:assets'
import '../styles/global.css'
---


<div class=" container mx-auto py-20">
      {items.map(item=>(
        <div class="w-[80vw] mx-4 rounded-xl overflow-hidden shadow-2xl">
            <img 
                src={item.image} 
                alt={item.title} 
                class="w-full h-[60vh] object-cover"
                data-aos="fade-up" 
            />
            <h3 class="text-2xl font-bold mt-4 px-6">{item.title}</h3>
        </div>
    ))}

    </div>
    
</div>

